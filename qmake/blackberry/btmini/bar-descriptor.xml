<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.qtproject.btmini</id>
    <name>BibleTime Mini</name>
    <versionNumber>1.1.3</versionNumber>
    <description>Simple and convenient app for daily Bible reading</description>
    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>Crosswire</author>
    <copyright>COPYRIGHT</copyright>
    <env var="QML_IMPORT_PATH" value="/usr/lib/qt4/imports:$QML_IMPORT_PATH"/>
    <env var="QT_PLUGIN_PATH" value="/usr/lib/qt4/plugins:$QT_PLUGIN_PATH"/>
    <env var="LD_LIBRARY_PATH" value="/usr/lib/qt4/lib:$LD_LIBRARY_PATH"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>
    <!-- btmini should point to the project binary, path can be relative -->
    <asset entry="true" path="${BUILD_DIR}/btmini" type="Qnx/Elf">btmini</asset>
    <asset path="../../common/btmini/bibletime80.png">bibletime80.png</asset>
    <icon>
        <image>bibletime80.png</image>
    </icon>
</qnx>
